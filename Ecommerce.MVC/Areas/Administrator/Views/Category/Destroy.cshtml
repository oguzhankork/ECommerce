@model ECommerce.Model.Entities.Category
@{
    ViewData["Title"] = "Destroy";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<section class="content">
    <div class="container-fluid pt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header bg-dark mb-3">
                        <h3 class="card-title">Delete @Model.CategoryName</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Category Name</label>
                                <p class="secondary">@Model.CategoryName</p>
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <p class="secondary">@Model.Description</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-dark">Delete Permanently</button>
                        </div>
                    </form>

                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</section>
