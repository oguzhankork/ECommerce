@{
    var sepet = Ecommerce.MVC.Helpers.SessionHelper.GetProductFromJson<ECommerce.Common.CartHelpers.Cart>(Context.Session, User.Identity.Name);



    




}
<ul class="navbar-nav ms-auto">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
    </li>
    <li class="nav-item me-2">
        <a asp-action="MyCart" asp-controller="Home" class="btn btn-primary position-relative">
            MyCart
            @if (sepet != null)
            {
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">


                    <span>@sepet.MyCart.Count</span>


                </span>
            }
        </a>
    </li>
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <div class="dropdown text-end">
                <a href="#" class="link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
                </a>
                <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" style="">

                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-action="Index" asp-controller="Home" asp-area="Administrator" class="dropdown-item" >Admin Panel</a></li>
                    }
                    
                    <li><a asp-action="Index" asp-controller="AppUser" asp-route-id="1" class="dropdown-item" >Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a asp-action="Signout" asp-controller="Home" class="dropdown-item">Sign out</a></li>
                </ul>
            </div>
        </li>
    }
</ul>